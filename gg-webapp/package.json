{
  "name": "@george-gillams/webapp",
  "version": "0.0.6",
  "main": "./index.js",
  "author": "George Gillams <open-source@georgegillams.co.uk>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/georgegillams/webapp-boilerplate.git"
  },
  "scripts": {
    "todo 1": "Try to run tests from top-level instead of having two jest configs",
    "test": "cross-env jest --coverage",
    "prerelease": "yarn transpile",
    "release": "babel-node scripts/release.js",
    "release:major": "yarn release --major",
    "release:minor": "yarn release --minor",
    "release:patch": "yarn release --patch",
    "release:alpha": "yarn release --alpha",
    "transpile:watch": "yarn transpile:js:watch",
    "transpile:js:watch": "yarn transpile:js --watch --ignore dist",
    "transpile": "yarn pretranspile && yarn transpile:js && yarn transform:js && yarn transpile:sass && yarn transpile:metadata",
    "transpile:js": "babel src -d dist --copy-files",
    "transform:js": "babel-node scripts/transform-js-scss-css-imports.js",
    "transpile:sass": "babel-node scripts/build-sass-in-place.js && cp ./src/utils/_tokens.scss ./dist/utils/",
    "transpile:metadata": "cp package.json ./dist/",
    "transpile:clean": "rimraf ./dist",
    "pretranspile": "yarn transpile:clean"
  },
  "peerDependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-loadable": "^5.5.0"
  },
  "dependencies": {
    "@babel/cli": "^7.12.7",
    "@babel/node": "^7.12.6",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-flow": "^7.13.13",
    "@babel/preset-react": "^7.12.7",
    "@george-gillams/components": "^28.0.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "babel-plugin-add-module-exports": "^1.0.4",
    "babel-plugin-dynamic-import-node": "^2.3.3",
    "babel-plugin-module-resolver": "^4.0.0",
    "css-loader": "^5.0.1",
    "date-fns": "^2.16.1",
    "detect-browser": "^5.2.0",
    "hoist-non-react-statics": "3.3.2",
    "mini-css-extract-plugin": "^1.3.1",
    "next": "^10.2.2",
    "node-sass-tilde-importer": "^1.0.2",
    "prompt": "^1.1.0",
    "prop-types": "^15.7.2",
    "sass": "^1.43.2",
    "sass-loader": "^10.1.1",
    "style-loader": "^2.0.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.2",
    "jest-cli": "^26.6.3",
    "rimraf": "^3.0.2"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
