ARG NODE_VERSION=12
FROM node:${NODE_VERSION} as build

RUN mkdir /opt/app
WORKDIR /opt/app

COPY . .
RUN PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true npm run gg-webapp-install
RUN npm run gg-webapp-transpile
RUN PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true npm ci
RUN npm run build
RUN pwd
RUN ls -la

# FROM node:${NODE_VERSION} as main

